import { useMutation } from '@tanstack/react-query'
import { postReq } from '@/utils/request'
import { Paths } from '@/types/api'
import { NOTIFICATION_TYPE } from '@/utils/enums'

const usePost{{  pascalCase (singular name) }} = () => {
	return useMutation({
		mutationFn: async (reqBody: Paths.PostApiPathTo{{ pascalCase name }}.RequestBody) => {
			const { data } = await postReq('/api/v1/{{ dashCase name }}/', null, reqBody, undefined, NOTIFICATION_TYPE.NOTIFICATION)
			return data
		}
	})
}

export default usePost{{  pascalCase (singular name) }}
